<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weather.MainActivity" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4"
	    android:orientation="vertical"
	    android:background="@drawable/day"
	    android:padding="10dp"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="3"
	        android:orientation="horizontal"
	        >
	        <TextView 
	         android:id="@+id/nowtempTV"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="25"
	        android:textSize="90px"
	        android:textColor="#fff"
	        />
	        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="℃"
	        android:textSize="50px"
	        android:textColor="#fff"
	        />
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/addressTV"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="长沙县  x028(宋水公路)"
	        android:textColor="#fff"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	    <TextView 
	        android:id="@+id/condTV"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="晴"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	    <TextView 
	        android:layout_width="20dp"
	        android:layout_height="match_parent"
	        android:text="|"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	    <TextView 
	        android:id="@+id/qltyTV"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="空气优"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	     <TextView 
	        android:layout_width="15dp"
	        android:layout_height="match_parent"
	       
	        />
	     <TextView 
	        android:id="@+id/pmTV"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="良"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	    </LinearLayout>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="4"
	        android:textColor="#fff"
	        />
	    <LinearLayout         
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:textColor="#fff"
	        >
	        <TextView 
	         android:id="@+id/windTV"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="北风"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	        <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="相对湿度"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	        <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="体感温度"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	    </LinearLayout>
	    <LinearLayout         
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	        <TextView 
	         android:id="@+id/windlTV"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="2级"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	        
	        <TextView 
	         android:id="@+id/humTV"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="73%"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	        <LinearLayout android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:textColor="#fff"
	        >
	        <TextView 
	        android:id="@+id/tempflTV"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="27"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="℃"
	        android:gravity="center"
	        android:textColor="#fff"
	        />
	        </LinearLayout>
	    </LinearLayout>
	    
	</LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        ></LinearLayout>
	<ListView
      android:id="@+id/id_lv"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      ></ListView>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        ></LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
       
        ></LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:text="穿衣指数"
	            android:gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/drsgTV"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:text="感冒指数"
	            android:gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/fluTV"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            />
	        
	    </LinearLayout>
	    <LinearLayout 
	       android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:text="运动指数"
	            android:gravity="center_horizontal"
	            />
	        <TextView 
	            android:id="@+id/sportTV"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            />
	        
	    </LinearLayout>
	     <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            android:text="紫外线指数"
	            />
	        <TextView 
	            android:id="@+id/uvTV"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            />
	        
	    </LinearLayout>
        <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            android:text="洗车指数"
	            />
	        <TextView 
	            android:id="@+id/cwTV"
	           android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_horizontal"
	            />
	        
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        >
       
    <Button 
        android:id="@+id/fBT"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="┇"
        android:background="#fff"
        android:gravity="right"
        android:padding="20dp"
        />
    </LinearLayout>
</LinearLayout>
